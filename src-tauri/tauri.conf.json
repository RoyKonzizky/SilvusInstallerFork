{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Lizi",
  "version": "1.0.0",
  "identifier": "com.TacCom-RnD-SoftwareTeam.Lizi",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "concurrently \"./install-npcap.bat\" \"npm run dev\"  \"python ./_up_/svApp/app/main.py\"",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Lizi",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../svApp.exe",
      "../run-svApp.bat",
      "../npcap-1.79.exe",
      "../install-npcap.bat"
    ]
  }
}
